<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ChooseActivity">


  <ImageView
    android:id="@+id/mandiri"
    android:layout_width="104dp"
    android:layout_height="104dp"
    android:layout_marginStart="16dp"
    android:onClick="mandiri"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.15"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.564"
    app:srcCompat="@drawable/user"
    android:contentDescription="TODO" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/mandiri_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:onClick="mandiri"
    android:text="Mandiri"
    android:textColor="@android:color/black"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.23"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/mandiri"
    app:layout_constraintVertical_bias="0.00999999" />

  <ImageView
    android:id="@+id/mewakilkan"
    android:layout_width="104dp"
    android:layout_height="104dp"
    android:layout_marginEnd="16dp"
    android:onClick="mewakilkan"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.85"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.564"
    app:srcCompat="@drawable/users"
    android:contentDescription="TODO" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/mewakilkan_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:onClick="mewakilkan"
    android:text="Mewakilkan"
    android:textColor="@android:color/black"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.79"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/mewakilkan"
    app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>